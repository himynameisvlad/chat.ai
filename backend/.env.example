# Server Configuration
PORT=3001

# AI Provider Selection (deepseek, claude, or huggingface)
AI_PROVIDER=deepseek

# AI Configuration
MAX_TOKENS=2048

# DeepSeek Configuration (required if AI_PROVIDER=deepseek)
DEEPSEEK_API_KEY=your_deepseek_api_key_here
DEEPSEEK_BASE_URL=https://api.deepseek.com
DEEPSEEK_MODEL=deepseek-chat

# Claude Configuration (required if AI_PROVIDER=claude)
ANTHROPIC_API_KEY=your_anthropic_api_key_here
CLAUDE_MODEL=claude-3-5-sonnet-20241022

# HuggingFace Configuration (required if AI_PROVIDER=huggingface)
HUGGINGFACE_API_KEY=your_huggingface_api_key_here
HUGGINGFACE_MODEL=meta-llama/Llama-3.2-3B-Instruct

# Database Configuration
DB_PATH=./data/chat.db

# MCP (Model Context Protocol) Integration
# Enable MCP servers for extended functionality with function calling

# Google Maps MCP Server
# Set to true to enable Google Maps MCP tools
MCP_GOOGLE_MAPS_ENABLED=false
# Google Maps API Key (required if MCP_GOOGLE_MAPS_ENABLED=true)
# Get your API key from https://console.cloud.google.com/apis/credentials
# MCP_GOOGLE_MAPS_API_KEY=your_google_maps_api_key_here

# Add more MCP servers here as needed
# Example for Memory MCP:
# MCP_MEMORY_ENABLED=false

MCP_POKEMON_SERVER_ENABLED=false
MCP_POKEMON_SERVER_URL=endpoint

# Filesystem MCP Server
# Set to true to enable filesystem access through MCP
MCP_FILESYSTEM_ENABLED=false
# Specify allowed directories (colon-separated paths). Defaults to current working directory if not set.
# Example: MCP_FILESYSTEM_ALLOWED_DIRS=/path/to/dir1:/path/to/dir2
# MCP_FILESYSTEM_ALLOWED_DIRS=

# Docker MCP Server
# Set to true to enable Docker container management through MCP
# Requires: Docker installed and running
# Provides: docker_run, docker_exec, docker_ps, docker_stop, docker_logs, docker_rm, docker_pull
MCP_DOCKER_ENABLED=false

